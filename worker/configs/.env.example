# Sample configuration for the video processing worker
# Copy this file to the project root as ".env" and adjust the values.

APP_NAME=video-worker
LOG_LEVEL=info

# Redis connection details
REDIS_ADDR=localhost:6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_STREAM=video_tasks
REDIS_GROUP=video_worker
REDIS_CONSUMER=video_worker_1
REDIS_BLOCK_TIMEOUT=5s
REDIS_MAX_DELIVERIES=5

# Concurrency
WORKER_POOL_SIZE=4
PROCESSING_TIMEOUT=5m

# PostgreSQL connection string
POSTGRES_DSN=postgres://video_worker:secret@localhost:5432/video_worker?sslmode=disable

# Nextcloud WebDAV credentials
NEXTCLOUD_URL=https://nextcloud.example.com
NEXTCLOUD_ROOT=/remote.php/dav/files/video-worker
NEXTCLOUD_USERNAME=worker
NEXTCLOUD_PASSWORD=super-secret

# Observability
METRICS_ADDR=:9090
SHUTDOWN_GRACE=30s
