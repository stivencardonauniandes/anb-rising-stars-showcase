# Configuración de Nextcloud
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=admin123

# Configuración de dominio (ajustar según tu servidor)
NEXTCLOUD_TRUSTED_DOMAINS=localhost .,
OVERWRITEHOST=34.229.110.180
OVERWRITEPROTOCOL=http
OVERWRITEWEBROOT=/
OVERWRITECLIENTPROTO=http

# Configuración de base de datos (servidor externo)
POSTGRES_HOST=host.docker.internal
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Configuración de Redis
REDIS_PASSWORD=redis123

# Configuración de memoria y rendimiento
PHP_MEMORY_LIMIT=512M
PHP_UPLOAD_LIMIT=10G
PHP_MAX_EXECUTION_TIME=3600

# Configuración de backup
NEXTCLOUD_BACKUP_KEEP_DAYS=7
